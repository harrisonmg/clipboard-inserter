{
    "manifest_version": 2,
    "name": "Clipboard Inserter Redux",
    "version": "0.5.3",
    "description": "A simple addon that inserts clipboard contents into the page. Uses icon made by Google from www.flaticon.com licensed by CC 3.0 BY. An update for the original addon \"Clipboard Inserter\".",
    "homepage_url": "https://github.com/Onurtag/clipboard-inserter/",
    "icons": {
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "64": "icon/icon64.png"
    },

    "applications": {
        "gecko": {
            "id": "@clipboard-inserter-redux"
        }
    },

    "permissions": [
        "activeTab",
        "clipboardRead",
        "storage",
        "tabs",
        "file://*/*",
        "*://*/*"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icon/icon16.png",
            "32": "icon/icon32.png",
            "64": "icon/icon64.png"
        },
        "default_title": "Toggle Clipboard Inserter Redux"
    },

    "background": {
        "page": "bg/index.html"
    },

    "options_ui": {
        "page": "options.html"
    }
}
